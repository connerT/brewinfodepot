<div class="row">
	
	<div class="span3">
        <div class="well sidebar-nav">
          <ul class="nav nav-list">
            <li class="nav-header">Information</li>
			<li>ABV: <%= @info.brewdb.abv %></li>
			<li>IBU: <%= @info.brewdb.ibu %></li>
			<li>Organic: <%= @info.brewdb.isOrganic %></li>
			<li>Glass: <%= @info.brewdb.glass_name %></li>
			<li>Style: <%= @info.brewdb.style_name %></li>
			<li>Status: <%= @info.brewdb.status %></li>
          </ul>
        </div><!--/.well -->
	</div> <!--end sidebar div-->
	
	<div class="span9">
		<div class="row">
				<div class="span1">
					<img src="<%= @info.brewdb.label_icon %>" name="image icon" />
				</div>
				<div class ="span8">
					<h1><%= @info.brewdb.name %></h1>
				</div>
		</div> <!--end row-->
		<div class="row">
			<div class="span9">
				<p><%= @info.brewdb.description %></p>
			</div>
		</div> <!-- end row div --> 
		<div class = "row">
			<div class = "span9">
				<div class="cycle-slideshow"
					data-cycle-loader=wait
				    data-cycle-auto-height=container
					data-cycle-fx=fadeout
			    	data-cycle-timeout=5000
					data-cycle-pause-on-hover="true"
					>
		
					<% @info.flickr.each do |photo| %>
						<img src="<%= photo.photo_url %>" 
						alt="<%= photo.title %>" />
					<% end %>
			
				</div> <!-- end slideshow -->
			</div> <!-- end span 6 -->
		</div> <!-- end row div --> 
	</div> <!--end content beside sidebar div-->
	
</div> <!--end main row-->